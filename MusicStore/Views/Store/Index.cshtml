@model IEnumerable<MusicStoreES.Models.Genre>
@{
    ViewBag.Title = "Store";
}
<p>
    <input type="text" id="searchBox" /> <button class="btn btn-default" id="searchButton">Search</button>
</p>
<h3>Browse Genres</h3>

<p>
    Select from @Model.Count() genres:
</p>
<ul>
    @foreach (var genre in Model)
    {
        <li>@Html.ActionLink(genre.Name, "Browse", new { genre = genre.Name })</li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('#searchButton').click(function() {
                var url = '@Url.Action("Search")';
                url += "?q=" + $('#searchBox').val();
                window.location.href = url;
            });
        })
    </script>
}